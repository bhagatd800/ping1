doctype html
html
  head
    meta(charset='UTF-8')
    title Task manager UI
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    script(src='/javascripts/angular.js')
    script(src='/javascripts/angular.min.js.map')
    script(src='/javascripts/angular-cookies.js')
    script(src='/javascripts/angular-cookies.min.js')
    script(src='/javascripts/script.js')
  body
    .page
      .pageHeader
        .title Dashboard
        .userPanel
          span.username
            a(href='/logout') Logout 
      .main
        .nav
          .menu
            .title Navigation
            ul
              li
                i.fa.fa-home
                a(href='/home')  Home
              li.active
                i.fa.fa-tasks
                a(href='/setting')  Token Setting
              li
                i.fa.fa-tasks
                a(href='/pingSetting')  Ping Setting
        .view
          .viewHeader
            .title Set Following Info
            div(ng-app='myApp',ng-controller='pingDataController')
              br
              .form-group.row
                .col-xs-6
                  label Family Name
                  input.form-control(type='text' placeholder='Family Name' ng-model='data.familyName')
                .col-xs-6
                  label IP
                  input.form-control(type='text' placeholder='ip' ng-model='data.ip')
                .col-xs-6
                  label Port
                  input.form-control(type='text' placeholder='port' ng-model='data.port')
                .col-xs-6
                  label If ping bigger than
                  input.form-control(type='text' placeholder='ping time' ng-model='data.pingTime')
                .col-xs-6
                  label Ping Every
                  input.form-control(type='text' placeholder='repeat time' ng-model='data.repeatTime') 
                  br
                .col-xs-12
                  .col-xs-6
                    button.btn.btn-primary.btn-block(type='button',ng-click='submit()') SUBMIT
  script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
  script(src='js/index.js')
