doctype html
html
  head
    meta(charset='UTF-8')
    title Task manager UI
    link(rel='stylesheet', href='/css/style.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    script(src='/javascripts/angular.js')
    script(src='/javascripts/angular.min.js.map')
    script(src='/javascripts/angular-cookies.js')
    script(src='/javascripts/angular-cookies.min.js')
    script(src='/javascripts/script.js')
  body
    .page
      .pageHeader
        .title Dashboard
        .userPanel
          span.username
            a(href='/logout') Logout 
      .main
        .nav
          .menu
            .title Navigation
            ul
              li.active
                i.fa.fa-home
                | Home
              li
                i.fa.fa-tasks
                a(href='/setting')  Token Setting
              li
                i.fa.fa-tasks
                a(href='/pingSetting')  Ping Setting
        .view
          .viewHeader
            .title Available Data
            div(ng-app='myApp',ng-controller='homeController' ng-init="getData()" )
                table.table.table-striped
                    thead.thead-inverse
                        tr
                        th Family Name
                        th Ip
                        th Port
                        th Repeat Time
                        th Action
                    tbody
                        tr(ng-repeat="data in dataSet")
                            td {[{data.familyName}]}
                            td {[{data.ip}]}
                            td {[{data.port}]}
                            td {[{data.repeatTime}]}
                            td
                                button.btn.btn-success(type='button', ng-click='start(data._id)') Start
                                button.btn.btn-danger(type='button', ng-click='stop()') Stop
                                button.btn.btn-primary(type='button', ng-click='delete(data._id)') Delete
    script(src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='js/index.js')
  
